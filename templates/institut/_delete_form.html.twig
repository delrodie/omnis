<form method="post" action="{{ path('backend_institut_delete', {'id': institut.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet institut?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ institut.id) }}">
    <button class="btn btn-danger">{{ 'btnDelete'|trans }}</button>
</form>
