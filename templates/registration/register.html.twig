{% extends 'security_layout.html.twig' %}

{% block title %}Creation de compte{% endblock %}

{% block body %}
    <div class="login-right">
        <div class="login-right-wrap">
            <h1 class="mb-5">Création de compte</h1>

            {{ form_start(registrationForm) }}
            <div class="form-group form-focus">
                {{ form_widget(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-group form-focus">
                {{ form_widget(registrationForm.username) }}
                {{ form_errors(registrationForm.username) }}
            </div>
            <div class="form-group form-focus">
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div class="custom-checkbox">
                <label>
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </label>

            </div>
            <button class="btn btn-primary btn-block">{{ 'Register'|trans }}</button>
            {{ form_end(registrationForm) }}

            <div class="text-right dont-have">Avez-vous déjà un compte? <a href="{{ absolute_url(path('app_login')) }}">Se connecter</a></div>
        </div>
    </div>
{% endblock %}
