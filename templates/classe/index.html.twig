{% extends 'inscription_backend_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion des Niveaux{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="content container-fluid">

            <div class="page-header">
                <div class="row">
                    <div class="col-12">
                        <h3 class="page-title">Gestion des Niveaux</h3>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="col-12">
                            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-checkbox-marked-circle font-32"></i><strong class="pr-1">Success !</strong> {{ message }}
                            </div>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="col-12">
                            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-close-circle font-32"></i><strong class="pr-1">Erreur !</strong>
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="row">
                <div class="col-xl-7">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">{{ 'labelList'|trans }}</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="datatable table table-hover table-center mb-0">
                                    <thead>
                                    <tr>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th class="text-center">Sigle</th>
                                        <th class="text-center">Denomination</th>
                                        <th class="text-center">actions</th>
                                    </tr>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for classe in classes %}
                                        <tr>
                                            <td>{{ classe.id }}</td>
                                            <td>{{ classe.sigle }}</td>
                                            <td>{{ classe.libelle }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('backend_classe_edit', {'id': classe.id}) }}"><i class="fe fe-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center">Aucun enregistrement</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5">
                    <div class="card flex-fill">
                        <div class="card-header">
                            <h4 class="card-title">{{ 'labelSave'|trans }}</h4>
                        </div>
                        <div class="card-body">
                            {{ include('classe/_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
