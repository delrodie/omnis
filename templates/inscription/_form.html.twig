{{ form_start(form) }}
    <div class="row form-row">
        <div class="col-12 col-md-12">
            <div class="form-group">
                <div class="change-avatar">
                    <div class="upload-img">
                        <div class="change-photo-btn">
                            <span><i class="fa fa-upload"></i> Photo d'identité</span>
                            <input type="file" class="upload">
                            {{ form_widget(form.fileIdentite) }}
                        </div>
                        <small class="form-text text-muted">Allowed JPG, GIF or PNG</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Nom</label>
                {{ form_widget(form.nom) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Prenoms</label>
                {{ form_widget(form.prenoms) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Date de naissance</label>
                <div class="cal-icon">
                    {{ form_widget(form.dateNaissance) }}
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Lieu de naissance</label>
                {{ form_widget(form.lieuNaissance) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Contact</label>
                {{ form_widget(form.contact) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Contact parent</label>
                {{ form_widget(form.correspondant) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Niveau d'étude</label>
                {{ form_widget(form.niveauEtude) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Dernier diplôme</label>
                {{ form_widget(form.dernierDiplome) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Filière souhaitée</label>
                {{ form_widget(form.filiere) }}
            </div>
        </div>
        <div class="col-12 col-md-12">
            <div class="form-group">
                <div class="change-avatar">
                    <div class="upload-img">
                        <div class="change-photo-btn">
                            <span><i class="fa fa-upload"></i> Baccalauréat</span>
                            <input type="file" class="upload">
                            {{ form_widget(form.baccalaureat) }}
                        </div>
                        {{ form_errors(form.baccalaureat) }}
                        <small class="form-text text-muted">Format autorisé JPG, PNG ou PDF</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12">
            <div class="form-group">
                <div class="change-avatar">
                    <div class="upload-img">
                        <div class="change-photo-btn">
                            <span><i class="fa fa-upload"></i> Dernier diplôme</span>
                            <input type="file" class="upload">
                            {{ form_widget(form.fileDiplome) }}
                        </div>
                        {{ form_errors(form.fileDiplome) }}
                        <small class="form-text text-muted">Format JPG, PNG ou PDF</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="text-right">
        <button class="btn btn-primary">{{ button_label|default('btnSave'|trans) }}</button>
    </div>

{{ form_end(form) }}
