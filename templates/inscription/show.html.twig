{% extends 'inscription_layout.html.twig' %}

{% block title %}{{ parent() }} {{ inscription.nom }} {{ inscription.prenoms }}{% endblock %}

{% block body %}
    <div class="breadcrumb-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8 col-8 offset-2">
                    <h2 class="breadcrumb-title text-center">Formulaire d'inscription</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- Profile Sidebar -->
                <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
                    <div class="profile-sidebar">
                        <div class="widget-profile pro-widget-content">
                            <div class="profile-info-widget">
                                <a href="#" class="booking-doc-img">
                                    <img src="{{ absolute_url(asset('inscription/img/avatar.png')) }}" alt="User Image">
                                </a>
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <div class="profile-det-info">
                                        <h3>{{ app.user.username }}</h3>
                                    </div>
                                {% endif %}

                            </div>
                        </div>
                        <div class="dashboard-widget">
                            <nav class="dashboard-menu">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-columns"></i>
                                            <span>Tableau de bord</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ absolute_url(path('app_login')) }}">
                                            <i class="fas fa-lock"></i>
                                            <span>Modifier le mot de passe</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ absolute_url(path('app_logout')) }}">
                                            <i class="fas fa-sign-out-alt"></i>
                                            <span>Déconnexion</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>

                <div class="col-md-7 col-lg-8 col-xl-9">
                    {% for message in app.flashes('error') %}
                        <div class="col-12">
                            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-close-circle font-32"></i><strong class="pr-1">Erreur !</strong>
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('succes') %}
                        <div class="col-12">
                            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-close-circle font-32"></i><strong class="pr-1">Succes !</strong>
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                    <div class="card">
                        <div class="card-body">
                            <div class="row form-row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Nom</label>
                                        <input type="text" class="form-control" value="{{ inscription.nom }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Prenoms</label>
                                        <input type="text" class="form-control" value="{{ inscription.prenoms }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Date de naissance</label>
                                        <input type="text" class="form-control" value="{{ inscription.dateNaissance }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Lieu de naissance</label>
                                        <input type="text" class="form-control" value="{{ inscription.lieuNaissance }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Contact</label>
                                        <input type="text" class="form-control" value="{{ inscription.contact }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Contact parent</label>
                                        <input type="text" class="form-control" value="{{ inscription.correspondant }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Niveau d'étude</label>
                                        <input type="text" class="form-control" value="{{ inscription.niveauEtude }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Dernier diplôme</label>
                                        <input type="text" class="form-control" value="{{ inscription.dernierDiplome }}" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>Filière souhaitée</label>
                                        <input type="text" class="form-control" value="{{ inscription.filiere.libelle }}" readonly>
                                    </div>
                                </div>
                            </div>
                            {% if inscription.valid is null %}
                                <div class="text-center mt-5">
                                    <a href="{{ path('inscription_edit', {'reference': inscription.reference}) }}" class="btn btn-secondary">Modifier</a>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


