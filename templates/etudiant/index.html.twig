{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>AncienMatricule</th>
                <th>Nom</th>
                <th>Prenoms</th>
                <th>DateNaiss</th>
                <th>LieuNaiss</th>
                <th>Contact</th>
                <th>Correspondant</th>
                <th>Photo</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.matricule }}</td>
                <td>{{ etudiant.ancienMatricule }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenoms }}</td>
                <td>{{ etudiant.dateNaiss }}</td>
                <td>{{ etudiant.lieuNaiss }}</td>
                <td>{{ etudiant.contact }}</td>
                <td>{{ etudiant.correspondant }}</td>
                <td>{{ etudiant.photo }}</td>
                <td>{{ etudiant.slug }}</td>
                <td>
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etudiant_new') }}">Create new</a>
{% endblock %}
