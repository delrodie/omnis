{{ form_start(form) }}
    <div class="row form-row">
        <div class="col-12 col-md-12">
            <div class="form-group">
                <div class="change-avatar">
                    <div class="upload-img">
                        <div class="change-photo-btn">
                            <span><i class="fa fa-upload"></i> Photo d'identit√© <span class="text-danger">*</span></span>
                            <input type="file" class="upload">
                            {{ form_widget(form.photo) }}
                            {{ form_errors(form.photo) }}
                        </div>
                        <small class="form-text text-muted">Format JPG, GIF or PNG</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Ancien matricule</label>
                {{ form_widget(form.ancienMatricule) }}
                {{ form_errors(form.ancienMatricule) }}
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label>Nom <span class="text-danger">*</span></label>
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="col-12 col-md-5">
            <div class="form-group">
                <label>Prenoms <span class="text-danger">*</span></label>
                {{ form_widget(form.prenoms) }}
                {{ form_errors(form.prenoms) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Date de naissance <span class="text-danger">*</span></label>
                <div class="cal-icon">
                    {{ form_widget(form.dateNaiss) }}
                    {{ form_errors(form.dateNaiss) }}
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Lieu de naissance <span class="text-danger">*</span></label>
                {{ form_widget(form.lieuNaiss) }}
                {{ form_errors(form.lieuNaiss) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Contact <span class="text-danger">*</span></label>
                {{ form_widget(form.contact) }}
                {{ form_errors(form.contact) }}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Contact parent <span class="text-danger">*</span></label>
                {{ form_widget(form.correspondant) }}
                {{ form_errors(form.correspondant) }}
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="text-right mt-5">
        <button class="btn btn-primary">{{ button_label|default('btnSave'|trans) }}</button>
    </div>
{{ form_end(form) }}
