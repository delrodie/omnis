<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

        <link href="assets/img/favicon.png" rel="icon">
        <title>{% block title %}OMNIS ::{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('inscription/css/bootstrap.min.css')) }}">
            <link rel="stylesheet" href="{{ absolute_url(asset('inscription/plugins/fontawesome/css/fontawesome.min.css')) }}">
            <link rel="stylesheet" href="{{ absolute_url(asset('inscription/plugins/fontawesome/css/all.min.css')) }}">
        {% endblock %}
        <link rel="stylesheet" href="{{ absolute_url(asset('inscription/css/style.css')) }}">

        <!--[if lt IE 9]>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="account-page">
        <header class="header">
        <nav class="navbar navbar-expand-lg header-nav">
            <div class="navbar-header">
                <a id="mobile_btn" href="javascript:void(0);">
							<span class="bar-icon">
								<span></span>
								<span></span>
								<span></span>
							</span>
                </a>
                <a href="{{ absolute_url(path('app_accueil')) }}" class="navbar-brand logo">
                    <img src="{{ asset('backoffice/img/omnis_logo.png') }}" class="img-fluid" alt="Logo">
                </a>
            </div>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="main-menu-wrapper">
                    <div class="menu-header">
                        <a href="{{ absolute_url(path('app_accueil')) }}" class="menu-logo">
                            <img src="assets/img/logo.png" class="img-fluid" alt="Logo">
                        </a>
                        <a id="menu_close" class="menu-close" href="javascript:void(0);">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <ul class="main-nav">
                        <li class="login-link">
                            <a href="{{ path('app_login') }}">Déconnexion</a>
                        </li>
                    </ul>
                </div>
                <ul class="nav header-navbar-rht">

                    <li class="nav-item dropdown has-arrow logged-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
								<span class="user-img">
									<img class="rounded-circle" src="{{ absolute_url(asset('inscription/img/avatar.png')) }}" width="31" alt="Ryan Taylor">
								</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="user-header">
                                <div class="avatar avatar-sm">
                                    <img src="{{ absolute_url(asset('inscription/img/avatar.png')) }}" alt="User Image" class="avatar-img rounded-circle">
                                </div>
                                <div class="user-text">
                                    <h6>{{ app.user.username }}</h6>
                                </div>
                            </div>
                            <a class="dropdown-item" href="#">Compte</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Deconexion</a>
                        </div>
                    </li>

                </ul>
            {% endif %}
        </nav>
    </header>
        <div class="content">
            <div class="content-fluid">
                {% block body %}{% endblock %}
            </div>
        </div>

        <footer class="footer">

            <div class="footer-bottom">
                <div class="container-fluid">

                    <div class="copyright">
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="copyright-text">
                                    <p class="mb-0">&copy; 2020 SelfBranding. Tous droits réservés.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </footer>
        {% block javascripts %}
            <script src="{{ absolute_url(asset('inscription/js/jquery.min.js')) }}"></script>

            <script src="{{ absolute_url(asset('inscription/js/popper.min.js')) }}"></script>
            <script src="{{ absolute_url(asset('inscription/js/bootstrap.min.js')) }}"></script>
        {% endblock %}
    </body>
</html>
