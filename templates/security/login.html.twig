{% extends 'inscription_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="account-content mb-5">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7 col-lg-6 login-left">
                        <img src="assets/img/login-banner.png" class="img-fluid" alt="Doccure Login">
                    </div>
                    <div class="col-md-12 col-lg-6 login-right mb-5">
                        <div class="login-header">
                            <h3> <span>Connexion</span></h3>
                        </div>
                        <form method="post" class="mb-5">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    {% trans %}You are logged in as{% endtrans %} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                                </div>
                            {% endif %}

                            <div class="form-group form-focus">
                                <input type="text" name="username" id="inputUsername" class="form-control floating" value="{{ last_username }}" required autofocus>
                                <label for="inputUsername" class="focus-label">Nom utilisateur</label>
                            </div>
                            <div class="form-group form-focus">
                                <input type="password" name="password" id="inputPassword" class="form-control floating" required>
                                <label for="inputPassword" class="focus-label">Motde passe</label>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
                            #}
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>


                            <div class="text-right">
                                <a class="forgot-link" href="forgot-password.html">Motde passe oublié ?</a>
                            </div>
                            <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Se connecter</button>
                            <div class="text-center dont-have">Vous n'avez pas encore de compte? <a href="{{ path('app_register') }}">Créer un compte</a></div>
                        </form>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
